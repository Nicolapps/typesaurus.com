---
import clsx from "clsx";

const path = new URL(Astro.request.url).pathname;
const { href, code } = Astro.props;
---

<a
  href={href}
  class={clsx(
    "group w-full flex items-center pl-11 pr-2 py-2 text-sm font-medium text-slate-300 rounded-md hover:text-orange-100 hover:bg-orange-900",
    path === href && "bg-slate-900"
  )}
>
  {
    code ? (
      <code>
        <slot />
      </code>
    ) : (
      <slot />
    )
  }
</a>
